<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context="com.nguyennghi.incomingfilter.MainActivity"
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:weightSum="20"
            android:layout_height="match_parent"
            >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_weight="3"
        >
            <ImageView
                    android:layout_width="65dp"
                    android:layout_gravity="center"
                    android:layout_height="64dp" app:srcCompat="@drawable/incoming"
                    android:id="@+id/imageView"/>
            <TextView
                    android:text="@string/incoming_filter"
                    android:layout_width="0dp"
                    android:textSize="25sp"
                    android:layout_weight="2"
                    android:layout_gravity="center|start"
                    android:layout_height="wrap_content" android:id="@+id/textView2"/>
            <ImageView
                    android:layout_width="31dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/addnumber"
                    android:id="@+id/imgNewNumber"/>
        </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="0dp"
            android:background="@drawable/layout_bg"
            android:layout_weight="15"

    >
        <ListView
                android:layout_width="match_parent"
                android:background="#99ffffff"
                android:paddingTop="5dp"

                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"


                android:id="@+id/list_item"/>
    </LinearLayout>
    <LinearLayout
                android:orientation="horizontal"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

        >
        <Button
                android:text="@string/enable_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnEnableAll"
                android:layout_weight="1"/>
        <Button
                android:text="@string/disable_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:id="@+id/btnDisableAll"/>
        </LinearLayout>

</LinearLayout>

