<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <bitmap android:src="@drawable/switch_on_icon" android:gravity="center_vertical|left"/>
    </item>
    <item android:state_checked="false">
        <bitmap android:src="@drawable/switch_off_icon" android:gravity="center_vertical|left"/>

    </item>
</selector>